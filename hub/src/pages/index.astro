---
import Layout from '../layouts/Layout.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import { Play } from 'lucide-astro';
---

<Layout>
  <Fragment slot="nav"><Nav /></Fragment>

  <!-- Hero -->
  <section class="pt-20 pb-32 text-center">
    <h1 class="text-5xl font-extrabold tracking-tight mb-6">
      Build games <span class="text-indigo-600">once</span>, deploy <em>everywhere</em>.
    </h1>
    <p class="max-w-xl mx-auto text-lg mb-10">
      VIOLETA is a data-driven ECS game engine for C# &amp; Rust, with hot-reload and WebGPU out of the box.
    </p>

    <div class="flex justify-center gap-4">
      <a href="/docs/intro" class="px-8 py-3 rounded-xl bg-indigo-600 text-white font-medium">
        Read the Docs
      </a>
      <a href="https://github.com/Bruzzknock/VIOLETA-Framework" class="px-8 py-3 rounded-xl border flex items-center gap-2">
        <Play class="size-4" /> GitHub
      </a>
    </div>
  </section>

  <!-- Anchor for features (optional) -->
  <section id="features" class="bg-slate-50 dark:bg-slate-800 py-24">
    <div class="max-w-6xl mx-auto grid gap-12 md:grid-cols-3">
      <!-- repeat .feature item -->
      <div class="text-center px-4">
        <h3 class="text-xl font-semibold mb-2">ECS Core</h3>
        <p>Ultra-fast, cache-friendly Entity Component System with code-gen-free queries.</p>
      </div>
      <!-- â€¦ -->
    </div>
  </section>

  <Fragment slot="footer"><Footer /></Fragment>
</Layout>
