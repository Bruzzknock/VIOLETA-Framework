---
import { Github } from 'lucide-astro';

const links = [
  { name: 'Features', href: '#features' },
  { name: 'Blog', href: 'https://medium.com/@kristijan.djokic' },
  { name: 'Docs', href: '/docs/' },   // points into Docusaurus
];
---
<header class="sticky top-0 z-50 backdrop-blur bg-white/70 dark:bg-slate-900/70 border-b">
  <nav class="mx-auto max-w-7xl px-4 h-14 flex items-center justify-between">
    <a href="/" class="flex items-center gap-2 font-semibold">
      <img src="/logo.svg" alt="VIOLETA Logo" class="h-6 md:h-8 lg:h-8 w-auto" />
    </a>

<ul class="hidden md:flex items-center gap-6 text-sm">
      {links.map(({ name, href }) => {
        const isExternal = href.startsWith('http');
        return (
          <li>
            <a
              href={href}
              class="hover:text-indigo-600"
              target={isExternal ? '_blank' : undefined}
              rel={isExternal ? 'noopener noreferrer' : undefined}
            >
              {name}
            </a>
          </li>
        );
      })}
      <li>
        <a
          href="https://github.com/Bruzzknock/VIOLETA-Framework"
          class="flex items-center gap-1 hover:text-indigo-600"
          target="_blank"
          rel="noopener noreferrer"
        >
          <Github class="size-4" /> Repo
        </a>
      </li>
    </ul>
  </nav>
</header>
