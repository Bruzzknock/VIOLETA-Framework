---
import { Github } from 'lucide-astro';

const links = [
  { name: 'Features', href: '#features' },
  { name: 'Showcase', href: '/showcase' },
  { name: 'Blog', href: '/blog' },
  { name: 'Docs', href: '/docs/intro' },   // points into Docusaurus
];
---
<header class="sticky top-0 z-50 backdrop-blur bg-white/70 dark:bg-slate-900/70 border-b">
  <nav class="mx-auto max-w-7xl px-4 h-14 flex items-center justify-between">
    <a href="/" class="flex items-center gap-2 font-semibold">
      <img src="/temp-logo.png" alt="VIOLETA Logo" class="h-6 w-auto" />
      VIOLETA
    </a>

    <ul class="hidden md:flex items-center gap-6 text-sm">
      {links.map(({ name, href }) => (
        <li><a href={href} class="hover:text-indigo-600">{name}</a></li>
      ))}
      <li>
        <a href="https://github.com/Bruzzknock/VIOLETA-Framework" class="flex items-center gap-1 hover:text-indigo-600">
          <Github class="size-4" /> Star
        </a>
      </li>
    </ul>
  </nav>
</header>
